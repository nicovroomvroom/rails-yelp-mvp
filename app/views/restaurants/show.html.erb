<div class="container p-3">
<h2><%= @restaurant.name %></h2>
  <p>Category : <%= @restaurant.category %></p>
  <p>Adress : <%= @restaurant.address %></p>
  <p>Phone number : <%= @restaurant.phone_number %></p>
  <p>Ratings :</p>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>Rating : <%= review.rating %></li>
      <li>Content : <%= review.content %></li>
      <hr>
    <% end %>
  </ul>

  <%= link_to "Back to restaurant list", restaurants_path, class: "btn btn-primary" %>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "text-primary" %>
</div>
